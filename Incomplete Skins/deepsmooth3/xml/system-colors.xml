<!-- 

  system-colors.xml


  this file contains all the static color definitions for Wasabi. An objects that does not rely on a group will use 
  one of these elements to decide what color to use.

-->


<elements>
 <!-- playlist editor -->
 <color id="pledit.text" value="255,255,255"/>	<!-- text color in editor -->
 <color id="pledit.text.readonly" value="255,255,255"/>	<!-- text color in editor -->
 <color id="pledit.text.current" value="255,255,255"/> <!-- current playback file foreground -->
 <color id="pledit.currentoutline" value="255,255,255" /> <!-- current playback file outline color -->
 <color id="pledit.dir.plitem" value="255,255,255" /> <!-- playlist directory item foreground color -->
 <color id="pledit.dir.working" value="255,255,255" /> <!-- playlist directory working playlist item foreground color -->
 <color id="pledit.dir.workingbg" value="255,255,255" /> <!-- playlist directory working playlist item background color -->
 <color id="pledit.dir.plitem.currect" value="255,255,255" />
 <!-- Generic Trees -->
 <color id="studio.tree.text" value="255,255,255"/> <!-- Item text color -->
 <color id="studio.tree.selected" value="40,40,40"/> <!-- Select item text background color -->
 <color id="studio.tree.hilited" value="40,40,40"/> <!-- Hilited item text background color -->
 <color id="studio.tree.hiliteddrop" value="255,255,255"/> <!--235,155 Drop marker color -->
 <!-- Generic Lists -->
 <color id="studio.list.text" value="255,255,255"/> <!-- List item text color -->
 <color id="studio.list.item.selected" value="40,40,40"/> <!-- Selected item text background color -->
 <color id="studio.list.item.focused" value="40,40,40"/> <!-- Focused item text background color -->
 <color id="studio.list.column.background" value="40,40,40"/> <!-- Columns background color -->
 <color id="studio.list.column.text" value="255,255,255"/> <!-- Columns text color -->
 <color id="studio.list.column.separator" value="255,255,255"/> <!-- Columns separator color -->
 <color id="studio.list.item.selected.fg" value="255,255,255" /><!-- Selected item text foreground color -->
 <!-- Item Lists -->
 <color id="common.itemlist.outline.current" value="40,40,40"/> <!-- Currently playing outline color -->
 <color id="common.itemlist.outline.focus" value="40,40,40"/> <!-- Focused item dashed outline color -->
 <color id="common.itemlist.selborder" value="40,40,40"/>
 <!-- Message box -->
 <color id="studio.msgBox.background" value="32,32,32"/> <!-- Messagebox background color -->
 <color id="studio.textBar.text" value="255,255,255"/> <!-- Text object & message box text color -->
 <color id="studio.textBar.background" value="32,32,32"/> <!-- Text object & message box text background color -->
 <!-- Buttons -->
 <color id="studio.button.text" value="255,255,255"/> <!-- Buttons text color -->
 <color id="studio.button.hiliteText" value="255,255,255"/> <!-- Buttons hilite text color, used by tab windows-->
 <color id="studio.button.dimmedText" value="255,255,255"/> <!-- Buttons dimmed text color, when disabled -->
 <!-- Popup menus -->
 <color id="studio.popup.text" value="0,0,0"/> <!-- Menu items text color -->
 <color id="studio.popup.hiliteText" value="255,255,255"/> <!-- Hilited item text color -->
 <color id="studio.popup.dimmedText" value="64,64,64"/> <!-- Disabled item text color -->
 <!-- labeled windows -->
 <color id="common.labelwnd.foreground" value="255,255,255" /> <!-- Text foreground color -->
 <color id="common.labelwnd.background" value="0,0,0"/> <!-- Text drop shadow color -->
 <!-- edit wnds -->
 <color id="wasabi.edit.selection" value="125,125,125" />
 <color id="wasabi.edit.text" value="255,255,255" />
 <color id="wasabi.edit.background" value="32,32,32" />
 <!-- Components -->
 <color id="studio.component.title.foreground" value="255,255,255" /> <!-- Old title bar text color when using TTF -->
 <color id="studio.component.title.border" value="0,0,0"/> <!-- Old title bar text outline when using TTF -->
 <color id="wasabi.statusbar.text" value="255,255,255" />
</elements>

<groupdef id="wasabi.text.group" inherit_content="1">
 <sendparams target="wasabi.text" color="255,255,255" shadowcolor="0,0,0" shadowx="1" shadowy="1" fontsize="12" />
</groupdef>

<groupdef id="studio.configgroup.std" inherit_content="1">
 <sendparams target="cfg.txt" color="255,255,255" shadowcolor="0,0,0" shadowx="1" shadowy="1" fontsize="12" />
</groupdef>

<groupdef id="wasabi.buttonbar.stack" inherit_content="1">
 <sendparams target="buttonbar.text" color="255,255,255" shadowcolor="0,0,0" shadowx="1" shadowy="1" fontsize="12" />
</groupdef>

<groupdef id="wasabi.titlebox.center.group" inherit_content="1" >
 <sendparams target="titlebox.text" color="255,255,255" shadowcolor="0,0,0" shadowx="1" shadowy="1" fontsize="12" />
</groupdef>

<groupdef id="wasabi.tabsheet.button.selected.group" inherit_content="1">
 <sendparams target="text" color="255,255,255" shadowcolor="0,0,0" shadowx="1" shadowy="1" fontsize="12" />
</groupdef>

<groupdef id="wasabi.tabsheet.button.unselected.group" inherit_content="1">
 <sendparams target="text" color="255,255,255" shadowcolor="0,0,0" shadowx="1" shadowy="1" fontsize="12" />
</groupdef>
