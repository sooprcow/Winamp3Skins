<!-- 

  system-colors.xml


  this file contains all the static color definitions for Wasabi. An objects that does not rely on a group will use 
  one of these elements to decide what color to use.

-->


<elements>
 <!-- playlist editor -->
 <color id="pledit.text" value="255,255,255"/>	<!-- text color in editor -->
 <color id="pledit.text.readonly" value="255,255,255"/>	<!-- text color in editor -->
 <color id="pledit.text.current" value="255,255,255"/> <!-- current playback file foreground -->
 <color id="pledit.currentoutline" value="255,255,255"/> <!-- current playback file outline color -->
 <color id="pledit.dir.plitem" value="255,255,255" /> <!-- playlist directory item foreground color -->
 <color id="pledit.dir.working" value="255,255,255" /> <!-- playlist directory working playlist item foreground color -->
 <color id="pledit.dir.workingbg" value="255,255,255" /> <!-- playlist directory working playlist item background color -->
 <color id="pledit.dir.plitem.currect" value="255,255,255" />
 <!-- Generic Trees -->
 <color id="studio.tree.text" value="255,255,255"/> <!-- Item text color -->
 <color id="studio.tree.selected" value="145,190,140"/> <!-- Select item text background color -->
 <color id="studio.tree.hilited" value="145,190,140"/> <!-- Hilited item text background color -->
 <color id="studio.tree.hiliteddrop" value="145,190,140"/> <!--235,155 Drop marker color -->
 <!-- Generic Lists -->
 <color id="studio.list.text" value="255,255,255"/> <!-- List item text color -->
 <color id="studio.list.item.selected" value="145,190,140"/> <!-- Selected item text background color -->
 <color id="studio.list.item.focused" value="145,190,140"/> <!-- Focused item text background color -->
 <color id="studio.list.column.background" value="145,190,140"/> <!-- Columns background color -->
 <color id="studio.list.column.text" value="255,255,255"/> <!-- Columns text color -->
 <color id="studio.list.column.separator" value="128,128,128"/> <!-- Columns separator color -->
 <color id="studio.list.item.selected.fg" value="255,255,255" /><!-- Selected item text foreground color -->
 <!-- Item Lists -->
 <color id="common.itemlist.outline.current" value="145,190,140"/> <!-- Currently playing outline color -->
 <color id="common.itemlist.outline.focus" value="145,190,140"/> <!-- Focused item dashed outline color -->
 <color id="common.itemlist.selborder" value="145,190,140"/>
 <!-- Message box -->
 <color id="studio.msgBox.background" value="0,0,0"/> <!-- Messagebox background color -->
 <color id="studio.textBar.text" value="255,255,255"/> <!-- Text object & message box text color -->
 <color id="studio.textBar.background" value="0,0,0"/> <!-- Text object & message box text background color -->
 <!-- Buttons -->
 <color id="studio.button.text" value="90,118,87"/> <!-- Buttons text color -->
 <color id="studio.button.hiliteText" value="90,118,87"/> <!-- Buttons hilite text color, used by tab windows-->
 <color id="studio.button.dimmedText" value="90,118,87"/> <!-- Buttons dimmed text color, when disabled -->
 <!-- Popup menus -->
 <color id="studio.popup.text" value="0,0,0"/> <!-- Menu items text color -->
 <color id="studio.popup.hiliteText" value="255,255,255"/> <!-- Hilited item text color -->
 <color id="studio.popup.dimmedText" value="64,64,64"/> <!-- Disabled item text color -->
 <!-- labeled windows -->
 <color id="common.labelwnd.foreground" value="255,255,255"/> <!-- Text foreground color -->
 <color id="common.labelwnd.background" value="0,0,0"/> <!-- Text drop shadow color -->
 <!-- edit wnds -->
 <color id="wasabi.edit.selection" value="128,128,128" />
 <color id="wasabi.edit.text" value="255,255,255" />
 <color id="wasabi.edit.background" value="157,205,152" />
 <!-- Components -->
 <color id="studio.component.title.foreground" value="0,0,0"/> <!-- Old title bar text color when using TTF -->
 <color id="studio.component.title.border" value="0,0,0"/> <!-- Old title bar text outline when using TTF -->
 <color id="wasabi.statusbar.text" value="0,0,0" />
</elements>
